\draw[thick] (a) circle (0.25cm);
 \node[draw=none,align=left] at (0,0.4) {\Large $\mathcal{R}_1$};
\node[draw=none,align=left] at (-0.4,-0.4) {\Large $x_1'$} ;
\draw[black] (-0.25,0) circle (.05cm); 

